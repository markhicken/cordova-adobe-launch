<?xml version='1.0' encoding='utf-8'?>
<widget id="com.hickendesign.cordovalaunch" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Crdv Launch</name>
    <description>
        A basic implementation of Adobe Launch in Cordova.
    </description>
    <author email="mark.hicken@gmail.com" href="http://www.hickendesign.com">
        Mark Hicken
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="*:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="ios" spec="^4.4.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
</widget>
